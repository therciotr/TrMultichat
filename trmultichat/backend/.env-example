NODE_ENV=development
BACKEND_URL=http://localhost:4004
FRONTEND_URL=http://localhost:9089
PROXY_PORT=443
PORT=4004

DB_HOST=127.0.0.1
DB_DIALECT=postgres
# Quando você usar ./infrastructure/start-local.sh, o Postgres fica acessível via forwarder
# em 127.0.0.1:65432 -> postgres:5432, com estas credenciais:
DB_USER=trmultichat_user
DB_PASS=trmultichat_local
DB_NAME=trmultichat
DB_PORT=65432

JWT_SECRET=local_secret_123
JWT_REFRESH_SECRET=local_refresh_123

REDIS_URI=redis://:trmultichat_local@127.0.0.1:6379
REDIS_OPT_LIMITER_MAX=1
REGIS_OPT_LIMITER_DURATION=3000

USER_LIMIT=99
CONNECTIONS_LIMIT=99
CLOSED_SEND_BY_ME=true

GERENCIANET_SANDBOX=false
GERENCIANET_CLIENT_ID=sua-id
GERENCIANET_CLIENT_SECRET=sua_chave_secreta
GERENCIANET_PIX_CERT=nome_do_certificado
GERENCIANET_PIX_KEY=chave_pix_gerencianet

